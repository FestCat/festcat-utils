DATADIR="__DATADIR__"
. "${DATADIR}/docfunctions"
usage=usage_text2audio
init_entorn # incialitza variables

#Constants
ANY=$(${DATE} +%Y)
COMENT=$(${FESTIVAL} -v)

autor=""
PISTA=1
oext="ogg"
voice="$DEFAULT_VOICE"
verbose=0
outfile=""

while getopts "ha:p:f:v:V" option;
do
   case "$option" in
      h) $usage
         exit 0
         ;;
      a) 
         autor="$OPTARG"
         ;;
      p)
         PISTA=$OPTARG
         ;;
      f)
         oext="$OPTARG"
         ;;
      v)
         voice="$OPTARG"
         ;;
      V)
         verbose=$(expr $verbose + 1 )
         ;;
      o)
         outfile="$OPTARG"
         ;;
    [?]) 
         $usage
         exit ;;
   esac
done
shift $(($OPTIND - 1)) 

voice_exists "$voice" || voice="${DEFAULT_VOICE}"
voice_exists "$voice" || exit 1
echoverb "Usant la veu: «$voice»" 0
valida_audio_ext "$oext"

if [ $# = 0 ]; then
   ${ECHO} "Cal indicar un fitxer de text."
   $usage
   exit 1
fi

infile="$1"

es_textfile "${infile}"
tmpfile="/tmp/$$_$RANDOM.txt"
${ECHO} $(clean_file  "${infile}") > "$tmpfile"

outfile=${infile%.*}.$oext

# Abans de començar comprovem si existeix l'arxiu oext, per no perdre el temps
if [ -f "$outfile" ]; then
# Si l'arxiu oext ja existeix preguntem el que cal fer
${CAT} << EOF
Ja existeix un arxiu amb el nom "$outfile", primer l'heu d'esborrar o canviar de nom.
Què voleu fer?
 0 - Sortir
 1 - Esborrar l'arxiu (sense confirmació!)
 2 - Canviar el nom de l'arxiu
EOF
read Opcio
  case "$Opcio" in
   0) 
     ${RM} "${tmpfile}"
      exit 1
      ;;
   1) 
      ${RM} "$outfile"
      ${ECHO} "S'ha esborrat l'arxiu $outfile"
      ;;
   2) 
      ${ECHO} "Entreu el nou nom (amb extensió)"
      read NouNom
      ${MV} "$outfile" "$NouNom";;
  esac
fi

${ECHO} "S'està llegint l'arxiu..."
${FESTCAT_TEXT2WAVE} -eval "(voice_${voice})" -o "$outfile" "${tmpfile}"
${RM} "${tmpfile}"



if [ "$oext" = "mp3" ]; then
   ${ID3} -t "${infile%.*}"                         \
          -a "$autor"                               \
          -g "Speech"                               \
          -T "$PISTA"                               \
          -y "$ANY"                                 \
          -A "${infile%_-_*}"                       \
          -c "Convertit amb festcat" \
          "${outfile}" > /dev/null

elif [ "$oext" = "ogg" ]; then
   ${VORBISCOMMENT} -t "TITLE=${infile%.*}"   \
                 -t "ARTIST=$autor"        \
                 -t "ALBUM=${infile%_-_*}" \
                 -t "GENRE=Speech"         \
                 -t "TRACKNUMBER=$PISTA"   \
                 -t "YEAR=$ANY"            \
                 -t "COMMENT=Convertit amb  festcat" \
                 -w "$outfile"
else
   ${ECHO} "Encara no s'ha implementat el marcat de l'autor, l'any i la pista per $oext"
fi

# Si hem arribat aquí vol dir que tot ha anat bé
${CAT} << EOF
La conversió de:
	$infile
a:
	$outfile
ha acabat correctament.
EOF
exit 0

